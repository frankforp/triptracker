#kivy 1.9.0
<CurrentDataScreen>
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        BoxLayout:
            Button:
                text: 'Go to trip'
                on_press:
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'trip'
            Label:
                text: 'Current data'
                position_hint: 1, 1
                font_size: 50
        GridLayout:
            cols: 2
            rows: 4
            Label:
                text: 'Time:'
                font_size: 30
            Label:
                id: lblTime
                text: '13:15'
                font_size: 40
                color: 1, 1, 0, 1
            Label:
                text: 'Location:'
                font_size: 30
            Label:
                id: lblLocation
                text: '51.5889 N 5.88273 E'
                color: 1, 1, 0, 1
                font_size: 40
            Label:
                text: 'Speed:'
                font_size: 30
            Label:
                id: lblSpeed
                text: '38 km/h'
                color: 1, 1, 0, 1
                font_size: 40

        ScatterLayout:

            MapView:
                id: map
                lat: 50.6394
                lon: 3.057
                zoom: 13
                MapMarkerPopup:
                    id: popup
                    lat: 50.6394
                    lon: 3.057
                    popup_size: dp(230), dp(130)


<TripScreen>
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        BoxLayout:
            Button:
                text: 'Go to current'
                on_press:
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'current'
            Label:
                size_hint: 1, 0.5
                position_hint: 0, 0
                text: 'Trip data'
                font_size: 50
        GridLayout:
            cols: 2
            rows: 4
            Label:
                text: 'Time:'
                font_size: 30
            Label:
                id: lblTime
                text: '13:15'
                font_size: 40
                color: 1, 1, 0, 1
            Label:
                text: 'Location:'
                font_size: 30
            Label:
                id: lblLocation
                text: '51.5889 N 5.88273 E'
                color: 1, 1, 0, 1
                font_size: 40
            Label:
                text: 'Speed:'
                font_size: 30
            Label:
                id: lblSpeed
                text: '38 km/h'
                color: 1, 1, 0, 1
                font_size: 40
